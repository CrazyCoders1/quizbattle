# QuizBattle Production Environment Configuration

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-production-key-change-this
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/quizbattle_prod
SQLALCHEMY_DATABASE_URI=postgresql://username:password@localhost:5432/quizbattle_prod

# MongoDB Configuration (for logging)
MONGODB_URI=mongodb://localhost:27017/quizbattle_logs_prod
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB_NAME=quizbattle_logs_prod

# OpenRouter AI Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=/var/lib/quizbattle/uploads

# CORS Configuration (Frontend URLs)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change-this-secure-password
DEFAULT_ADMIN_EMAIL=admin@yourdomain.com

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/quizbattle/app.log

# Performance Configuration
WORKERS=4
MAX_CONNECTIONS=1000
TIMEOUT=30

# Security Headers
FORCE_HTTPS=True
HSTS_MAX_AGE=31536000