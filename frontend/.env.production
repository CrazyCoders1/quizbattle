# QuizBattle Frontend Production Configuration

# Build Configuration - Disable CI warnings as errors
CI=false
GENERATE_SOURCEMAP=false

# API Configuration
REACT_APP_API_URL=https://quizbattle-backend.onrender.com/api
REACT_APP_BASE_URL=https://quizbattle-frontend.netlify.app

# Performance Configuration
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
REACT_APP_ENABLE_DEBUG=false
REACT_APP_MAINTENANCE_MODE=false

# External Services
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
REACT_APP_HOTJAR_ID=your-hotjar-id